<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<!--    winner-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        ></TextView>

<!--    option 1-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option1"
        android:layout_below="@+id/winner"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="175dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option1votes"
        android:layout_below="@+id/winner"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/option1"
        android:layout_marginLeft="20dp"
        ></TextView>

<!--    option 2-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option2"
        android:layout_below="@+id/option1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="175dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option2votes"
        android:layout_below="@+id/option1votes"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/option2"
        android:layout_marginLeft="20dp"
        ></TextView>

<!--    option 3-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option3"
        android:layout_below="@+id/option2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="175dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option3votes"
        android:layout_below="@+id/option2"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/option3"
        android:layout_marginLeft="20dp"
        ></TextView>



</RelativeLayout>